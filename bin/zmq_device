#!/usr/bin/perl 

use lib 'lib';
use ZeroMQ::Oneliner;

unless(@ARGV){
	printf qq!$0 - Create ZeroMQ device
usage:  $0 [options..] tcp://*:6666/queue?opt=value
available sockets: %s
available options: %s
!,
		join(", ", ZeroMQ::Oneliner::available_sockets()),
		join(", ", ZeroMQ::Oneliner::available_options()),
	;
	exit 1;
}

ZeroMQ::Oneliner->new(@ARGV);

