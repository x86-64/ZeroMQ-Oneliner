#!/usr/bin/perl 

BEGIN { unshift @INC, "./lib" };

use ZeroMQ::Oneliner;

use Getopt::Lazy
	'help|h' => 'Show help screen',
	-summary => 'Create ZeroMQ device',
	-usage => '%c %o bind-tcp://*:6666/queue',
	;

GetOptions;
Getopt::Lazy::show_help() and exit 1 unless @ARGV;

ZeroMQ::Oneliner->new($ARGV[0]);

